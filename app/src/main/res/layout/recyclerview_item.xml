<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/touch_bg"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/room_1"/>

    <TextView
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_bi"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/icon"
        android:text="aaa"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/name"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_power"
        android:text="TextView"/>

    <ImageView
        android:id="@+id/network_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/power"
        android:src="@drawable/ic_xinhao"/>


    <TextView
        android:id="@+id/id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/network_power"
        android:text="TextView"/>
    <TextView
        android:visibility="invisible"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:id="@+id/time"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_toLeftOf="@+id/time"
        android:id="@+id/switchs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_on"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/skip"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/time"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_navigate_next_black_24dp"
        />
    <RadioGroup
        android:layout_toLeftOf="@+id/time"
        android:visibility="visible"
       android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/radio_group"
        android:orientation="horizontal"
        android:layout_width="120dp"
        android:layout_height="wrap_content">
        <RadioButton
            android:background="@drawable/radio_bg"
            android:gravity="center"
            android:button="@null"
            android:text="开"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:background="@drawable/radio_bg"
            android:gravity="center"
            android:button="@null"
            android:text="停"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:background="@drawable/radio_bg"
            android:gravity="center"
            android:button="@null"
            android:text="关"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <SeekBar
        android:visibility="visible"
        android:id="@+id/seekbar"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toLeftOf="@+id/time"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#ccc"/>
</RelativeLayout>