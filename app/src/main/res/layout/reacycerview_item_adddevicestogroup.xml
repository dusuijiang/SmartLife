<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/icon"
        android:layout_centerVertical="true"
        android:src="@mipmap/room_1"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_bi"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="8dp"
        android:text="aaa"
        android:layout_toRightOf="@+id/icon"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:src="@drawable/ic_power"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/name"/>

    <ImageView
        android:src="@drawable/ic_xinhao"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/network_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/power"
        android:text="TextView"/>


    <TextView
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/network_power"
        android:text="TextView"/>

    <ImageView
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/switchs"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <View
        android:layout_alignParentBottom="true"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>