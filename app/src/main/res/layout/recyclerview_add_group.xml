<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                xmlns:stv="http://schemas.android.com/tools">

    <ImageView
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:id="@+id/icon"
        android:layout_centerVertical="true"
        android:src="@mipmap/aaa"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <TextView
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_bi"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:text="aaa"
        android:layout_toRightOf="@+id/icon"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.allen.library.SuperButton
        android:textSize="20sp"
        android:id="@+id/switchs"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="选择"
        android:textColor="@color/white"
        app:sCornersRadius="5dp"
        app:sSelectorNormalColor="@color/colorPrimaryDark"
        app:sSelectorPressedColor="@color/black"
        app:sUseSelector="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
    <View
        android:layout_alignParentBottom="true"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>